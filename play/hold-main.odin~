package odin2ghp

import "core:os"
import "core:fmt"

fn :: proc () {
 m := (transmute(^map[string]string)context.user_ptr)^;
  fmt.println ("inside play/fn,")
  elem,ok := m["name"];
  fmt.println("name=", elem, ok);
  elem2,ok2 := m["surname"];
  fmt.println("surname=", elem2, ok2);
}

main :: proc() {
  fmt.println("--- begin ---")
  m := make(map[string]string);
  m["name"] = "Paul"
  m["surname"] = "<noname>"
  elem,ok := m["name"];
  fmt.println("name=", elem, ok);
  elem2,ok2 := m["surname"];
  fmt.println("surname=", elem2, ok2);
  context.user_ptr = &m;
  //    fn ();
  fmt.println("--- end");
}
